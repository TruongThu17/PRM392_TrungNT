<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomTextView"
        android:layout_width="364dp"
        android:layout_height="180dp"
        android:gravity="center"
        android:text="@string/welcom"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/welcome_textsize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="317dp"
        android:layout_height="230dp"
        android:layout_below="@+id/droidimageview"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="49dp"
        android:contentDescription="@string/deital_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomTextView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/bug" />

    <ImageView
        android:id="@+id/droidimageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/android_logo"
        app:srcCompat="@drawable/android"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="302dp" />
</RelativeLayout>